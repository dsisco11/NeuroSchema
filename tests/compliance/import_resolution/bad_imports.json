{
  "$schema": "../../tests.schema.json",
  "metadata": {
    "name": "Import and Reference Error Tests",
    "version": "1.0.0",
    "description": "Tests for proper handling of import and reference resolution errors",
    "category": "error_handling"
  },
  "tests": [
    {
      "id": "duplicate_import_names",
      "title": "Duplicate Import Names",
      "description": "Verify that duplicate import names produce the correct error code",
      "feature": "error_handling",
      "tags": [
        "imports",
        "duplicates",
        "validation"
      ],
      "inputs": {
        "files": {
          "./module2.neuro.json": {
            "outputs": [
              {
                "name": "output",
                "shape": [
                  10
                ],
                "dtype": "float32"
              }
            ],
            "inputs": [
              {
                "name": "input",
                "shape": [
                  10
                ],
                "dtype": "float32"
              }
            ],
            "$schema": "https://raw.githubusercontent.com/neuro-format/schemas/2025-1/neuro.schema.json",
            "metadata": {
              "model": {
                "version": "1.0.0",
                "name": "module2.neuro"
              }
            },
            "export": [
              {
                "arguments": [
                  "input"
                ],
                "name": "identity",
                "type": "identity"
              }
            ]
          },
          "duplicate_import_test.neuro.json": {
            "$schema": "https://raw.githubusercontent.com/neuro-format/schemas/2025-1/neuro.schema.json",
            "metadata": {
              "model": {
                "name": "duplicate_import_test",
                "version": "1.0.0"
              }
            },
            "imports": [
              {
                "name": "shared_module",
                "type": "neuro",
                "path": "./module1.neuro.json"
              },
              {
                "name": "shared_module",
                "type": "neuro",
                "path": "./module2.neuro.json"
              }
            ],
            "inputs": [
              {
                "name": "input",
                "shape": [
                  10
                ],
                "dtype": "float32"
              }
            ],
            "outputs": [
              {
                "name": "output",
                "shape": [
                  10
                ],
                "dtype": "float32"
              }
            ],
            "export": [
              {
                "name": "identity",
                "type": "identity",
                "arguments": [
                  "input"
                ]
              }
            ]
          },
          "./module1.neuro.json": {
            "outputs": [
              {
                "name": "output",
                "shape": [
                  10
                ],
                "dtype": "float32"
              }
            ],
            "inputs": [
              {
                "name": "input",
                "shape": [
                  10
                ],
                "dtype": "float32"
              }
            ],
            "$schema": "https://raw.githubusercontent.com/neuro-format/schemas/2025-1/neuro.schema.json",
            "metadata": {
              "model": {
                "version": "1.0.0",
                "name": "module1.neuro"
              }
            },
            "export": [
              {
                "arguments": [
                  "input"
                ],
                "name": "identity",
                "type": "identity"
              }
            ]
          }
        },
        "import_target": "duplicate_import_test.neuro.json"
      },
      "expected": {
        "error": {
          "code": "neuro.ref.duplicate_import",
          "message_pattern": ".*duplicate.*import.*shared_module.*"
        }
      }
    },
    {
      "id": "import_not_found",
      "title": "Import Not Found",
      "description": "Verify that missing import files produce the correct error code",
      "feature": "error_handling",
      "tags": [
        "imports",
        "file_not_found",
        "validation"
      ],
      "inputs": {
        "neuro_model": {
          "$schema": "https://raw.githubusercontent.com/neuro-format/schemas/2025-1/neuro.schema.json",
          "metadata": {
            "model": {
              "name": "import_not_found_test",
              "version": "1.0.0"
            }
          },
          "imports": [
            {
              "name": "missing_module",
              "type": "neuro",
              "path": "./nonexistent/module.neuro.json"
            }
          ],
          "inputs": [
            {
              "name": "input",
              "shape": [
                10
              ],
              "dtype": "float32"
            }
          ],
          "outputs": [
            {
              "name": "output",
              "shape": [
                10
              ],
              "dtype": "float32"
            }
          ],
          "export": [
            {
              "name": "imported_node",
              "type": "missing_module",
              "arguments": [
                "input"
              ]
            }
          ]
        }
      },
      "expected": {
        "error": {
          "code": "neuro.ref.import_not_found",
          "message_pattern": ".*[Ii]mport.*file.*not.*found.*"
        }
      }
    },
    {
      "id": "invalid_import_type_handling",
      "title": "Invalid Import Type Handling",
      "description": "Verify that invalid import types are properly rejected",
      "feature": "error_handling",
      "tags": [
        "validation",
        "invalid_types"
      ],
      "inputs": {
        "neuro_model": {
          "$schema": "https://raw.githubusercontent.com/neuro-format/schemas/2025-1/neuro.schema.json",
          "metadata": {
            "model": {
              "name": "invalid_type_test",
              "version": "1.0.0"
            }
          },
          "imports": [
            {
              "name": "unknown_type",
              "type": "unsupported_format",
              "path": "./file.unknown"
            }
          ],
          "inputs": [
            {
              "name": "input",
              "shape": [
                10
              ],
              "dtype": "float32"
            }
          ],
          "outputs": [
            {
              "name": "output",
              "shape": [
                10
              ],
              "dtype": "float32"
            }
          ],
          "export": []
        }
      },
      "expected": {
        "error": {
          "code": "neuro.schema.validation_failed",
          "message_pattern": ".*unsupported.*import.*type.*"
        }
      }
    }
  ]
}