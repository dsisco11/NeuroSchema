{
  "name": "neuroschema",
  "version": "1.0.0",
  "description": "NeuroFormat JSON Schema validation and testing",
  "scripts": {
    "validate": "node tools/validate-json-schema.js",
    "validate-target": "node tools/validate-json-schema.js --target",
    "validate-filter": "node tools/validate-json-schema.js | findstr",
    "format": "prettier --write \"**/*\"",
    "format-check": "prettier --check \"**/*\"",
    "install-tools": "cd tools && npm install"
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  },
  "keywords": [
    "neuroformat",
    "schema",
    "validation",
    "json-schema"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neuro-format/NeuroSchema.git"
  }
}
