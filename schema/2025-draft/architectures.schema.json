{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NeuroGraph Architectures Schema",
  "description": "Schema definitions for NeuroGraph neural network architecture compound nodes",
  "definitions": {
    "anyfloat": {
      "$ref": "./neuro.schema.json#/definitions/anyfloat"
    },
    "anyint": {
      "$ref": "./neuro.schema.json#/definitions/anyint"
    },
    "anyuint": {
      "$ref": "./neuro.schema.json#/definitions/anyuint"
    },
    "anynumeric": {
      "$ref": "./neuro.schema.json#/definitions/anynumeric"
    },
    "architecture_type": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["sequential"]
        },
        {
          "$ref": "./neuro.schema.json#/definitions/qualified_name",
          "description": "Third-party architecture type in the format 'namespace:type'"
        }
      ]
    },
    "sequential_architecture": {
      "type": "object",
      "required": ["name", "type", "arguments", "implementation"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the sequential architecture definition"
        },
        "type": {
          "type": "string",
          "enum": ["sequential"]
        },
        "arguments": {
          "type": "array",
          "description": "Input arguments for the sequential architecture - specifies the single input expected by this architecture type",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": {
                "type": "string",
                "const": "input"
              },
              "type": {
                "type": "string",
                "description": "Expected input tensor type"
              },
              "shape": {
                "type": "array",
                "items": { "type": "integer", "minimum": 1 },
                "description": "Expected input shape (excluding batch dimension)"
              },
              "required": {
                "type": "boolean",
                "default": true
              },
              "description": {
                "type": "string",
                "description": "Description of the input"
              }
            }
          }
        },
        "attributes": {
          "type": "object",
          "description": "Configuration attributes that specify input and output shapes for the sequential architecture",
          "properties": {
            "input_shape": {
              "type": "array",
              "items": { "type": "integer", "minimum": 1 },
              "description": "Expected input shape (excluding batch dimension)"
            },
            "output_shape": {
              "type": "array",
              "items": { "type": "integer", "minimum": 1 },
              "description": "Expected output shape (excluding batch dimension)"
            }
          }
        },
        "implementation": {
          "type": "object",
          "required": ["graph"],
          "properties": {
            "graph": {
              "type": "object",
              "required": ["nodes"],
              "properties": {
                "nodes": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "$ref": "./neuro.schema.json#/definitions/node_instance"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/sequential_architecture"
    }
  ]
}
