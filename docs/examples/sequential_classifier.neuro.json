{
  "$schema": "../../schema/2025-draft/neuro.schema.json",
  "metadata": {
    "model": {
      "name": "simple_sequential_classifier",
      "version": "1.0.0",
      "description": "A simple sequential neural network for image classification",
      "author": "NeuroFormat Team",
      "license": "MIT",
      "tags": ["sequential", "classification", "example"],
      "modalities": {
        "inputs": ["vision"],
        "outputs": ["tabular"]
      }
    }
  },
  "inputs": [
    {
      "name": "image",
      "description": "Flattened 28x28 grayscale image",
      "shape": [1, 784],
      "dtype": "float32"
    }
  ],
  "outputs": [
    {
      "name": "predictions",
      "description": "Class probabilities for 10 digit classes",
      "shape": [1, 10],
      "dtype": "float32"
    }
  ],
  "constants": [
    {
      "name": "input_size",
      "type": "scalar",
      "value": 784
    },
    {
      "name": "hidden1_size",
      "type": "scalar",
      "value": 128
    },
    {
      "name": "hidden2_size",
      "type": "scalar",
      "value": 64
    },
    {
      "name": "output_size",
      "type": "scalar",
      "value": 10
    }
  ],
  "definitions": [
    {
      "name": "mnist_classifier",
      "type": "sequential",
      "parameters": {
        "inputs": [
          {
            "name": "input",
            "type": "tensor",
            "shape": [784],
            "description": "Flattened input image"
          }
        ],
        "attributes": {
          "input_shape": [{ "ref": "constants/input_size" }],
          "output_shape": [{ "ref": "constants/output_size" }]
        }
      },
      "implementation": {
        "graph": {
          "nodes": [
            {
              "name": "fc1",
              "type": "linear",
              "arguments": ["@{inputs.input}"],
              "attributes": {
                "in_features": { "ref": "constants/input_size" },
                "out_features": { "ref": "constants/hidden1_size" },
                "bias": true
              }
            },
            {
              "name": "relu1",
              "type": "activation",
              "arguments": ["@{./fc1}"],
              "attributes": {
                "function": "relu"
              }
            },
            {
              "name": "fc2",
              "type": "linear",
              "arguments": ["@{./relu1}"],
              "attributes": {
                "in_features": { "ref": "constants/hidden1_size" },
                "out_features": { "ref": "constants/hidden2_size" },
                "bias": true
              }
            },
            {
              "name": "relu2",
              "type": "activation",
              "arguments": ["@{./fc2}"],
              "attributes": {
                "function": "relu"
              }
            },
            {
              "name": "fc3",
              "type": "linear",
              "arguments": ["@{./relu2}"],
              "attributes": {
                "in_features": { "ref": "constants/hidden2_size" },
                "out_features": { "ref": "constants/output_size" },
                "bias": true
              }
            },
            {
              "name": "output",
              "type": "activation",
              "arguments": ["@{./fc3}"],
              "attributes": {
                "function": "softmax"
              }
            }
          ]
        }
      }
    }
  ],
  "export": [
    {
      "name": "classifier",
      "type": "mnist_classifier",
      "arguments": ["@{inputs.image}"]
    }
  ]
}
