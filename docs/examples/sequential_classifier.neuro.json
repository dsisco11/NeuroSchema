{
  "$schema": "https://raw.githubusercontent.com/neuro-format/schemas/2025-1/neuro.schema.json",
  "metadata": {
    "model": {
      "name": "simple_sequential_classifier", 
      "version": "1.0.0",
      "description": "A simple sequential neural network for image classification",
      "author": "NeuroFormat Team",
      "license": "MIT",
      "tags": ["sequential", "classification", "example"]
    }
  },
  "inputs": [
    {
      "name": "image",
      "description": "Flattened 28x28 grayscale image",
      "shape": [1, 784],
      "dtype": "float32"
    }
  ],
  "outputs": [
    {
      "name": "predictions", 
      "description": "Class probabilities for 10 digit classes",
      "shape": [1, 10],
      "dtype": "float32"
    }
  ],
  "definitions": [
    {
      "name": "mnist_classifier",
      "type": "sequential",
      "parameters": {
        "inputs": [
          {
            "name": "input",
            "type": "tensor",
            "shape": [784],
            "description": "Flattened input image"
          }
        ],
        "attributes": {
          "input_shape": [784],
          "output_shape": [10]
        }
      },
      "implementation": {
        "graph": {
          "nodes": [
          {
            "name": "fc1",
            "type": "linear",
            "arguments": ["input"],
            "attributes": {
              "in_features": 784,
              "out_features": 128,
              "bias": true
            }
          },
          {
            "name": "relu1", 
            "type": "activation",
            "arguments": ["fc1"],
            "attributes": {
              "function": "relu"
            }
          },
          {
            "name": "fc2",
            "type": "linear", 
            "arguments": ["relu1"],
            "attributes": {
              "in_features": 128,
              "out_features": 64,
              "bias": true
            }
          },
          {
            "name": "relu2",
            "type": "activation",
            "arguments": ["fc2"],
            "attributes": {
              "function": "relu"
            }
          },
          {
            "name": "fc3",
            "type": "linear",
            "arguments": ["relu2"],
            "attributes": {
              "in_features": 64,
              "out_features": 10,
              "bias": true
            }
          },
          {
            "name": "output",
            "type": "activation",
            "arguments": ["fc3"],
            "attributes": {
              "function": "softmax"
            }
          }
          ]
        }
      }
    }
  ],
  "export": [
    {
      "name": "classifier",
      "type": "mnist_classifier",
      "arguments": ["image"]
    }
  ]
}
