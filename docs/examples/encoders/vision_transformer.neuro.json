{
  "$schema": "../../../schema/2025-draft/neuro.schema.json",
  "metadata": {
    "model": {
      "name": "vision_transformer",
      "version": "1.0.0",
      "description": "Vision Transformer (ViT) image encoder",
      "author": "NeuroFormat Team",
      "license": "MIT",
      "tags": ["vit", "vision", "transformer", "encoder"]
    }
  },
  "inputs": [
    {
      "name": "image",
      "description": "RGB image tensor",
      "shape": [3, 224, 224],
      "dtype": "float32"
    }
  ],
  "outputs": [
    {
      "name": "features",
      "description": "Image patch embeddings",
      "shape": [196, 768],
      "dtype": "float32"
    }
  ],
  "constants": [
    {
      "name": "feature_dim",
      "type": "scalar",
      "value": 768
    },
    {
      "name": "patch_size",
      "type": "scalar",
      "value": 16
    },
    {
      "name": "num_patches",
      "type": "scalar",
      "value": 196
    },
    {
      "name": "num_layers",
      "type": "scalar",
      "value": 12
    },
    {
      "name": "num_attention_heads",
      "type": "scalar",
      "value": 12
    },
    {
      "name": "input_channels",
      "type": "scalar",
      "value": 3
    }
  ],
  "definitions": [
    {
      "name": "vit_encoder",
      "type": "sequential",
      "parameters": {
        "inputs": [{"name": "image", "type": "tensor"}],
        "attributes": {
          "patch_size": "@{constants/patch_size}",
          "embed_dim": "@{constants/feature_dim}",
          "num_layers": "@{constants/num_layers}"
        }
      },
      "implementation": {
        "graph": {
          "nodes": [
            {
              "name": "patch_embedding",
              "type": "convolution",
              "arguments": ["@{inputs.image}"],
              "attributes": {
                "kernel_size": ["@{constants/patch_size}", "@{constants/patch_size}"],
                "stride": ["@{constants/patch_size}", "@{constants/patch_size}"],
                "in_channels": "@{constants/input_channels}",
                "out_channels": "@{constants/feature_dim}"
              }
            },
            {
              "name": "transformer_encoder",
              "type": "transformer",
              "arguments": ["@{./patch_embedding}"],
              "attributes": {
                "num_layers": "@{constants/num_layers}",
                "hidden_size": "@{constants/feature_dim}",
                "num_heads": "@{constants/num_attention_heads}"
              }
            }
          ]
        }
      }
    }
  ],
  "export": [
    {
      "name": "features",
      "type": "vit_encoder", 
      "arguments": ["@{inputs.image}"]
    }
  ]
}
