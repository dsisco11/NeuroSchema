{
  "$schema": "../../../schema/2025-draft/neuro.schema.json",
  "metadata": {
    "model": {
      "name": "bert_base_encoder",
      "version": "1.0.0",
      "description": "BERT base text encoder",
      "author": "NeuroFormat Team",
      "license": "MIT",
      "tags": ["bert", "encoder", "text", "transformer"],
      "modalities": {
        "inputs": ["text"],
        "outputs": ["text"]
      }
    }
  },
  "inputs": [
    {
      "name": "input_ids",
      "description": "Token IDs from tokenizer",
      "shape": [512],
      "dtype": "int32"
    }
  ],
  "outputs": [
    {
      "name": "hidden_states",
      "description": "Contextualized token representations",
      "shape": [512, 768],
      "dtype": "float32"
    }
  ],
  "constants": [
    {
      "name": "hidden_size",
      "type": "scalar",
      "value": 768
    },
    {
      "name": "num_layers",
      "type": "scalar",
      "value": 12
    },
    {
      "name": "num_attention_heads",
      "type": "scalar",
      "value": 12
    },
    {
      "name": "vocab_size",
      "type": "scalar",
      "value": 30522
    }
  ],
  "definitions": [
    {
      "name": "bert_encoder",
      "type": "sequential",
      "arguments": [{ "name": "tokens", "type": "tensor" }],
      "attributes": {
        "vocab_size": "@{constants/vocab_size}",
        "hidden_size": "@{constants/hidden_size}",
        "num_layers": "@{constants/num_layers}"
      },
      "subgraph": [
        {
          "name": "embeddings",
          "type": "embedding",
          "arguments": ["@{inputs.tokens}"],
          "attributes": {
            "num_embeddings": "@{constants/vocab_size}",
            "embedding_dim": "@{constants/hidden_size}"
          }
        },
        {
          "name": "encoder_output",
          "type": "transformer",
          "arguments": ["@{./embeddings}"],
          "attributes": {
            "num_layers": "@{constants/num_layers}",
            "hidden_size": "@{constants/hidden_size}",
            "num_heads": "@{constants/num_attention_heads}"
          }
        }
      ]
    }
  ],
  "export": [
    {
      "name": "hidden_states",
      "type": "bert_encoder",
      "arguments": ["@{inputs.input_ids}"]
    }
  ]
}
